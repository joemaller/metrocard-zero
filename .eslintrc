{
    // parse with babel-eslint
    // "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true
    },
    "ecmaFeatures": {
        "jsx": true
    },
    "rules": {
        "camelcase": [2, {"properties": "never"}],
        "quotes": [1, "single", "avoid-escape"],
        "no-undef": [0],
        "no-underscore-dangle": [0],
        "eol-last": [1],
        "no-use-before-define": [0],
        "indent": [2, 2],
        "strict": [2, "global"],
        "react/jsx-uses-vars": 1
    // }
    },
    "plugins": [
        "react"
    ]
}